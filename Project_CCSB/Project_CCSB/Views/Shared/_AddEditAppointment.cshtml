@model Project_CCSB.Models.ViewModels.Appointment.AddAppointmentViewModel

<div class="modal fade" role="dialog" id="appointmentInput" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="appointmentForm" autocomplete="off" novalidate="novalidate">
                <div class="modal-header">
                    <h4 class="modal-title">Toevoegen/wijzigen afspraak</h4>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="AppointmentDate"></label>
                        <div class="col-md-10">
                            <input asp-for="AppointmentDate" class="form-control" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="AppointmentTime"></label>
                        <div class="col-md-10">
                            <input asp-for="AppointmentTime" class="form-control" />
                            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="AppointmentType"></label>
                        <div class="col-md-10">
                            <select asp-for="AppointmentType"
                                    asp-items="@Project_CCSB.Models.Helper.GetBringOrReceive()"
                                    class="form-control">
                                <option selected>Kies brengen of ophalen</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="AppointmentVehicle"></label>
                        <div class="col-md-10">
                            <select asp-for="AppointmentVehicle"
                                    asp-items="@ViewBag.Vehicles" class="form-control"></select>
                            <span asp-validation-for="AppointmentVehicle" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Sluiten</button>
                    <button type="button" class="btn btn-primary">Opslaan</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/custom-calendar.js"></script>
}