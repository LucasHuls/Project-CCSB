@model Project_CCSB.Models.ViewModels.Appointment.AddAppointmentViewModel

<div class="modal fade" role="dialog" id="removeAppointment" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="removeAppointmentDiv">
            <form id="appointmentForm" autocomplete="off" novalidate="novalidate">
                <div class="modal-header">
                    <h4 class="modal-title">Wil je deze afspraak wijzigen/verwijderen?</h4>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="AppointmentDate"></label>
                        <div class="col-md-10">
                            <input name="bookId" id="dateInputRemove" asp-for="AppointmentDate" class="form-control" />
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="AppointmentType"></label>
                        <div class="col-md-10">
                            <select id="appointmentTypeRemove" asp-for="AppointmentType"
                                    asp-items="@Project_CCSB.Models.Helper.GetBringOrReceive()"
                                    class="form-control">
                                <option selected>Kies brengen of ophalen</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="AppointmentVehicle"></label>
                        <div class="col-md-10">
                            <select id="licensePlateRemove" asp-for="AppointmentVehicle"
                                    asp-items="@ViewBag.Vehicles" class="form-control"></select>
                            <span asp-validation-for="AppointmentVehicle" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="AppointmentUser"></label>
                        <div class="col-md-10">
                            <p id="userTextRemove"></p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger mr-auto" onclick="DeleteAppointment()">Verwijderen</button>
                    <button type="button" class="btn btn-secondary" onclick="ClosePopUp()">Sluiten</button>
                    <button type="button" class="btn btn-primary" onclick="EditAppointment()">Opslaan</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    var routeURL = location.protocol + "//" + location.host;

    document.getElementById("licensePlateRemove").addEventListener("change", () => {
        var licensePlateSelect = document.getElementById("licensePlateRemove").value;
        GetUserRemove(licensePlateSelect);
    });
</script>
@section Scripts{
    <script src="~/js/custom-calendar.js"></script>
}